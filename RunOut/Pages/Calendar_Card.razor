@page "/calendarCard"
@layout MainLayout

<div class="card">
	<img src="Images/@path" class="cardContainer" />
	<h3 class="title"> @title</h3>
    <p class="distance">@distance</p>
    <p class="pace">@pace</p>

    <p class="day">@day</p>
    <p class="month"> @month</p>

</div>
@code {
    [Parameter]
    public string title { get; set; } = "Interval";
    [Parameter]
    public string distance { get; set; } = "5k";
    [Parameter]
    public string pace{ get; set; } = "6:30";
    [Parameter]
    public string month { get; set; } = "Month";
    [Parameter]
    public string day  { get; set; } = "1";
    [Parameter]
    public bool active { get; set; } = false;

    private string path; 

    public Calendar_Card()
         {
            if (active == true){
                path = "StartRunCard.png";
            }
            else {
                path = "InactiveRunCard.png";
            }
     }

     public void setActiveCard(){
        path = "StartRunCard.png";
     }
}