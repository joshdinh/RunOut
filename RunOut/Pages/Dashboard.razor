@page "/dashboard"
@layout MainLayout

<div class='container'>
    <div class='info-container'>
        <div class='with-bg time-container'>
            <p class='day'>13</p>
            <p class='days'>Days left</p>
            <p class='date'>Dec. 11</p>
        </div>

        <div class='info-section with-bg'>
            <h1>Name of Marathon</h1>

            <ul style="list-style">
                <li>Distance:</li>
                <li>Location:</li>
                <li>Notes:</li>
            </ul>
        </div>
    </div>


    <a href='/noprogram'>
        <input type="button" value="ADD NEW RACE DATE" class='button with-bg' />
    </a>

    <a href='/runningform'>
        <input type="button" value="TIPS AND TRICKS" class='button with-bg' />
    </a>



    <div class='with-bg week-workout'>
        <p>WEEK X</p>
        
        <div class="grid-container">
            <div class="grid-item"><h1>Rest</h1>
                <p>Description</p>
                <button>START</button>
            </div>

            <div class="grid-item">@Calendar_Data.runs[0].runType</div>
           
            <div class="grid-item">@Calendar_Data.runs[1].runType</div>
          
            <div class="grid-item">@Calendar_Data.runs[2].runType</div>
         
            <div class="grid-item">@Calendar_Data.runs[3].runType</div>
           
            <div class="grid-item">@Calendar_Data.runs[4].runType</div>
            
            <div class="grid-item">@Calendar_Data.runs[5].runType</div>
        </div>
    </div>

    <div class='with-bg nav'>
        <img src="Images/BottomNav_UserFeed.png" class="bottomNav" />
        <a href="/dashboard" class="homepage"></a>
        <a href="/calendar" class="calendar"></a>
        <a href="/profile" class="profile"></a>
        <a href="/userfeed" class="feed"></a>
    </div>
</div>

@code {
    //holds calendar data 
    [CascadingParameter]
    protected Calendar_Data? Calendar_Data { get; set; }


}
